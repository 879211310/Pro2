    Layout = null;
} 

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title> 

     <link href="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/skins/Aqua/css/ligerui-form.css" rel="stylesheet" type="text/css"> 
    <script src="~/Scripts/jquery-ligerUI-1.1.9/jquery/jquery-1.9.0.min.js" type="text/javascript"></script>
    <script src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/core/base.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerForm.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerDateEditor.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerComboBox.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerCheckBox.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerButton.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerDialog.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerRadio.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerSpinner.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ligerUI-1.1.9/ligerUI/js/plugins/ligerTextBox.js" type="text/javascript"></script>
  
    <script type="text/javascript">
        $(function () {

        });

    </script>
    <style type="text/css">
           body{ font-size:12px;}
        .l-table-edit {}
        .l-table-edit-td{ padding:4px;}
        .l-button-submit,.l-button-reset{width:80px; float:left; margin-left:10px; padding-bottom:2px;}
        .l-verify-tip{ left:230px; top:120px;} 
    </style> 
</head>
<body>
   
    @using (Html.BeginForm("Save", "WeiXinMediaMessage", FormMethod.Post, new { @class = "formular", id = "form1", enctype = "multipart/form-data" }))
{ 
        <table cellpadding="0" cellspacing="0" class="l-table-edit">
            <tbody>
                <tr>
                <td align="right" class="l-table-edit-td">素材标题:</td>
                <td align="left" class="l-table-edit-td"> 
                    @Html.TextBox("MediaTitle")
                </td> 
            </tr>
                <tr>
                <td align="right" class="l-table-edit-td">类型:</td>
                <td align="left" class="l-table-edit-td">
                    @Html.DropDownList("MediaType",ViewData["MediaList"] as List<SelectListItem>,new{@style="width:100px;"})
                </td>
            </tr> 
                <tr>
                <td align="right" class="l-table-edit-td" valign="top">是否永久素材:</td>
                <td align="left" class="l-table-edit-td"> 
                      @Html.DropDownList("IsForever",ViewData["MediaTypeList"] as List<SelectListItem>,new{@style="width:100px;"})
                   </td>
            </tr>   
                <tr>
                <td align="right" class="l-table-edit-td">素材文件:</td>
                <td align="left" class="l-table-edit-td"> 
                    <input id="FileUpload" type="file" name="files" style="width: 250px; height: 24px; background: White"
                            class="easyui-validatebox" />
                </td>
            </tr> 
        </tbody></table>
        <div> 
            <input type="submit" value="保存" class="submit" style="margin:20px;"/> 
        </div> 
}
</body>
</html> 
