@{
    Layout = null;
}
@model MyProject.Matrix.Controllers.Home.ViewModels.LogOnModel

<!DOCTYPE html> 
<html lang="en">
    
<head>
        <title>My Admin</title><meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
		<link rel="stylesheet" href="/Content/Matrix_Admin/css/bootstrap.min.css" />
		<link rel="stylesheet" href="/Content/Matrix_Admin/css/bootstrap-responsive.min.css" />
        <link rel="stylesheet" href="/Content/Matrix_Admin/css/matrix-login.css" />
        <link href="/Content/Matrix_Admin/font-awesome/css/font-awesome.css" rel="stylesheet" />
		

    </head>
    <body>
        <div id="loginbox">   
            @using (Html.BeginForm("LogInIndex", "Home", FormMethod.Post, new { id = "loginform", @classs = "form-vertical" }))
            { 
				 <div class="control-group normal_text"> <h3><img src="/Content/Matrix_Admin/img/logo.png" alt="Logo" /></h3></div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on bg_lg"><i class="icon-user"></i></span>
                            @Html.TextBoxFor(model => model.UserName, new { placeholder="账号"});
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                            @Html.PasswordFor(model => model.Password, new { placeholder="密码"});
                        </div>
                    </div>
                </div>
                <div class="form-actions"> 
                    <span class="pull-right"><input type="submit"  class="btn btn-success" value="登陆" /></span>
                   <span style="color:red;"> @Html.ValidationSummary()</span>
                </div>
           } 
        </div> 
        <script src="/Content/Matrix_Admin/js/jquery.min.js"></script>  
        <script src="/Content/Matrix_Admin/js/matrix.login.js"></script> 
    </body>

</html>